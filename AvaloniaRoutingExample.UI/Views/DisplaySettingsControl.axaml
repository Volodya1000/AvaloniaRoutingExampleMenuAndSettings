<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AvaloniaRoutingExample.UI.Views.DisplaySettingsControl"
             xmlns:vm="using:AvaloniaRoutingExample.ViewModel"
             x:DataType="vm:DisplaySettingsViewModel">
  <StackPanel Margin="20" Spacing="10">
    <TextBlock Text="Настройки экрана" FontWeight="Bold" FontSize="16"/>

    <StackPanel Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
      <TextBlock Text="Полноэкранный режим" VerticalAlignment="Center"/>
      <ToggleSwitch IsChecked="{Binding IsFullScreen}"/>
    </StackPanel>

    <StackPanel Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
      <TextBlock Text="Масштаб интерфейса" VerticalAlignment="Center"/>
      <ComboBox ItemsSource="{Binding AvailableScales}"
          SelectedItem="{Binding SelectedScale}"
          Width="100"/>
    </StackPanel>
  </StackPanel>
</UserControl>
