<Window
    xmlns="https://github.com/avaloniaui"
    xmlns:rxui="http://reactiveui.net"
    xmlns:app="clr-namespace:AvaloniaRoutingExample.UI"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:AvaloniaRoutingExample.ViewModel"
    x:Class="AvaloniaRoutingExample.UI.Views.MainWindow"
    x:Name="MainWnd"
    x:DataType="vm:MainWindowViewModel"
    Title="Настройки">

  <Window.Styles>
    <Style Selector="Button">
      <Setter Property="Background" Value="Transparent"/>
      <Setter Property="Foreground" Value="Gray"/>
      <Setter Property="FontWeight" Value="Normal"/>
    </Style>
    <Style Selector="Button.selected">
      <Setter Property="Background" Value="LightBlue"/>
      <Setter Property="Foreground" Value="Black"/>
      <Setter Property="FontWeight" Value="Bold"/>
    </Style>
  </Window.Styles>

  <DockPanel>
    <StackPanel DockPanel.Dock="Left" Width="180" Margin="10">
      <TextBlock Text="Разделы:" FontWeight="Bold" Margin="0,0,0,8"/>
      <ItemsControl ItemsSource="{Binding SettingsSections}">
        <ItemsControl.ItemTemplate>
          <DataTemplate>
            <!-- Исправленная кнопка с правильной привязкой класса -->
            <Button Content="{Binding UrlPathSegment}"
                    Command="{Binding DataContext.NavigateToSectionCommand, ElementName=MainWnd}"
                    CommandParameter="{Binding}"
                    Classes.selected="{Binding IsSelected}"
                    Margin="0,2"/>
          </DataTemplate>
        </ItemsControl.ItemTemplate>
      </ItemsControl>
    </StackPanel>

    <Border Margin="10" BorderBrush="Gray" BorderThickness="1" Padding="10">
      <rxui:RoutedViewHost Router="{Binding Router}">
        <rxui:RoutedViewHost.ViewLocator>
          <app:AppViewLocator />
        </rxui:RoutedViewHost.ViewLocator>
      </rxui:RoutedViewHost>
    </Border>
  </DockPanel>
</Window>
